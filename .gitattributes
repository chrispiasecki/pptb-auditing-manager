# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Config files
*.config.js text eol=lf
*.config.ts text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# SVG can be text or binary - treat as text for better diffs
*.svg text eol=lf

# Lock files - keep as-is
package-lock.json text eol=lf -diff
npm-shrinkwrap.json text eol=lf -diff
